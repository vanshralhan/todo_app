<h1>Todos</h1>
<%= form_for Todo.new,remote: true do |f|%>
  <div class="form-group">
    <%= f.text_field :description, placeholder: "what needs doing?" %>
  </div>

  <div class="form-group">
    <%= f.text_field :priority, placeholder: "priority level" %>
  </div>

  <div class = "form-group">
    <%= f.submit %>
  </div>
<% end %>

<ul>
  <%= render @todos %>
</ul>
